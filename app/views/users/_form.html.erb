<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="trans pad">
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username , class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :password %>
      <%= form.password_field :password_digest, id: :user_password_digest , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :nama %>
    <%= form.text_field :nama, id: :user_nama , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :alamat %>
    <%= form.text_field :alamat, id: :user_alamat , class: 'form-control'%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>